  ids = {elith\_working\_2009-1},
  issn = {1365-2656},
  journal = {Journal of Animal Ecology},
  keywords = {data mining,machine learning,model averaging,random forests,species distributions},
  language = {en},
  number = {4},
  pages = {802-813},
  title = {A Working Guide to Boosted Regression Trees},
  volume = {77},
  year = {2009}
