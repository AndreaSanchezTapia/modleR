  journal = {Ecological Modelling},
  keywords = {AUC,conservation,Model evaluation,Pseudo-absence data,Species distribution model},
  month = feb,
  number = {4},
  pages = {589-594},
  shorttitle = {Selecting Pseudo-Absence Data for Presence-Only Distribution Modeling},
  title = {Selecting Pseudo-Absence Data for Presence-Only Distribution Modeling: {{How}} Far Should You Stray from What You Know?},
