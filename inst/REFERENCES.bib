  number = {5},
  pages = {541-545},
  shorttitle = {{{spThin}}},
  title = {{{spThin}}: An {{R}} Package for Spatial Thinning of Species Occurrence Records for Use in Ecological Niche Models},
  volume = {38},
  year = {2015}
}

